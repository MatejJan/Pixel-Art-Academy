@import "debugfont.import"

debug-rendering = false

.am-display
  position fixed
  top 0
  bottom 0
  left 0
  right 0
  debug-font()

  *
    box-sizing border-box

  .crop-bar
    position absolute
    background black

    &.top-crop-bar
      top 0
      left 0
      right 0

    &.bottom-crop-bar
      bottom 0
      left 0
      right 0

    &.left-crop-bar
      top 0
      bottom 0
      right 0

    &.right-crop-bar
      top 0
      bottom 0
      left 0

  .viewport-bounds
    position absolute
    display none unless debug-rendering
    border 2px solid firebrick
    color firebrick
    pointer-events none

    .scale
      position absolute
      bottom 0
      right 0
      padding 2px

    .safe-area
      position absolute
      border 2px solid goldenrod
